<head>
    <meta charset="utf-8">
    <title>JBA</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/grid/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/d7b26806ab.js" crossorigin="anonymous"></script>

    <!-- Bootstrap core CSS -->
    <link href="/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
        a {display: inline-block}
    </style>

    <!-- Custom styles for this template -->
    <link href="grid.css" rel="stylesheet">
</head>
<body class="py-4">

<main>
    <div class="px-4 py-5 my-5 text-center" >
        <h1><b>Player Creator</b></h1>
        <h2 style="font-size: 20px;"><b></b></h2>

        <form method="POST">
            <div class="form-group" style = "padding: 10px;">
                <label for="name">Name:</label>
                <input type="text" class="forms-control" id="name" name="name"
                       value="<%= (typeof player === 'undefined') ? '' : player.name %>">
            </div>

            <div class="form-group" style = "padding: 10px;">
                <label>Position: </label>
                <select id="position" name="position">
                    <option value="Point Guard">Point Guard</option>
                    <option value="Shooting Guard">Shooting Guard</option>
                    <option value="Small Forward">Small Forward</option>
                    <option value="Power Forward">Power Forward</option>
                    <option value="Center">Center</option>
                </select>
            </div>

            <div class="form-group" style = "padding: 10px;">
                <label for="ppg">PPG:</label>
                <input type="text" class="forms-control" id="ppg" name="ppg"
                       value="<%= (typeof player === 'undefined') ? '' : player.ppg %>">
            </div>

            <div class="form-group" style = "padding: 10px;">
                <label for="trb">TRB:</label>
                <input type="text" class="forms-control" id="trb" name="trb"
                       value="<%= (typeof player === 'undefined') ? '' : player.trb %>">
            </div>

            <div class="form-group" style = "padding: 10px;">
                <label for="ast">AST:</label>
                <input type="text" class="forms-control" id="ast" name="ast"
                       value="<%= (typeof player === 'undefined') ? '' : player.ast %>">
            </div>

            <div class="form-group" style = "padding: 10px;">
                <label for="mpg">MPG: </label>
                <input type="text" class="forms-control" id="mpg" name="mpg"
                       value="<%= (typeof player === 'undefined') ? '' : player.mpg %>">
            </div>
            <input type="submit" class="btn btn-primary" value="Save"/>
            <a class="btn btn-primary" href="/players/<%= team._id %>">Cancel</a>
        </form>
    </div>
</main>
</body>