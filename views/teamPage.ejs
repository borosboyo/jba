<head>
    <meta charset="utf-8">
    <title>JBA</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/grid/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/d7b26806ab.js" crossorigin="anonymous"></script>

    <!-- Bootstrap core CSS -->
    <link href="/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
        a {display: inline-block}
    </style>
</head>
<body class="py-4">

<main>
    <div class="px-4 py-5 my-5 text-center">
        <h1><b>Team: <%= team.name %></b></h1>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center" style = "padding: 50px;" >
            <a href="/players/<%= team._id %>/new">
                <button type="button" class="btn btn-primary btn-lg px-4 gap-3">New Player</button>
            </a>
            <a href="/<%= team.conference %>" class="btn btn-primary btn-lg px-4 gap-3">Back</a>
        </div>

        <div class ="container">
            <div class = "row">
                <table class ="table table-striped table-borderd">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Position
                        </th>
                        <th>
                            PPG
                        </th>
                        <th>
                            TRB
                        </th>
                        <th>
                            AST
                        </th>
                        <th>
                            MP
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    <% players.forEach(function(onePlayer){ %>
                    <tr>
                        <th>
                            <%= onePlayer.name %>
                        </th>
                        <th>
                            <%= onePlayer.position %>
                        </th>
                        <th>
                            <%= onePlayer.ppg %>
                        </th>
                        <th>
                            <%= onePlayer.trb %>
                        </th>
                        <th>
                            <%= onePlayer.ast %>
                        </th>
                        <th>
                            <%= onePlayer.mpg %>
                        </th>
                        <th>
                            <a href="/players/<%= team._id %>/edit/<%= onePlayer._id %>" class="btn btn-sm btn-primary"><i
                                        class="far fa-edit"></i></a>
                            <a href="/players/<%= team._id %>/del/<%= onePlayer._id %>" class="btn btn-sm btn-danger"><i
                                        class="far fa-trash-alt"></i></a>
                        </th>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</main>
</body>